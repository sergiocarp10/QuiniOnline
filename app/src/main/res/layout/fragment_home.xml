<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Realizar una apuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una de las siguientes loterÃ­as para continuar"
        app:layout_constraintStart_toStartOf="@id/text_home"
        app:layout_constraintTop_toBottomOf="@id/text_home" />

    <ImageView
        android:id="@+id/quini1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/quini2"
        app:layout_constraintBottom_toBottomOf="@id/quini2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/quini2"
        android:src="@mipmap/loteria_prov"/>

    <ImageView
        android:id="@+id/quini2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toEndOf="@id/quini1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/loteria_ciudad"/>

    <ImageView
        android:id="@+id/quini3"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/quini4"
        app:layout_constraintBottom_toBottomOf="@id/quini4"
        app:layout_constraintStart_toStartOf="@id/quini1"
        app:layout_constraintEnd_toEndOf="@id/quini1"
        android:src="@mipmap/loteria_cordoba"/>

    <ImageView
        android:id="@+id/quini4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/quini2"
        app:layout_constraintStart_toEndOf="@id/quini1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/loteria_stafe"/>

</androidx.constraintlayout.widget.ConstraintLayout>